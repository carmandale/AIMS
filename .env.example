# AIMS Environment Configuration Template
# Copy this file to .env and update with your values

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Security
SECRET_KEY=your-secret-key-here-change-in-production
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Database
DATABASE_URL=sqlite:///./aims.db

# SnapTrade Configuration (get from https://dashboard.snaptrade.com/signup)
SNAPTRADE_CLIENT_ID=your-snaptrade-client-id
SNAPTRADE_CONSUMER_KEY=your-snaptrade-consumer-key
SNAPTRADE_ENVIRONMENT=sandbox  # or "production"

# Logging
LOG_LEVEL=INFO

# Timezone for scheduled tasks
TIMEZONE=America/Chicago
